<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="filebrowser.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="filebrowser.Perspective"
            fixed="true"
            id="FileBrowser.perspective"
            name="RCP Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            class="filebrowser.BrowserView"
            id="FileBrowser.browserView"
            name="Browser"
            restorable="true">
      </view>
      <view
            class="filebrowser.PathView"
            id="FileBrowser.pathView"
            name="Path"
            restorable="true">
      </view>
      <view
            class="filebrowser.ImageView"
            id="FileBrowser.imageView"
            name="ImageView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="filebrowser.MyTextEditor"
            extensions="txt"
            id="FileBrowser.MyTextEditor"
            name="Editor">
      </editor>
   </extension>

</plugin>
